<h1>Create a New Location for <%= @region.name %></h1>

<%= form_with url: "/regions/#{@region.id}/locations", method: :post, local: true do |form| %>
  <%= form.label :name %><br>
  <%= form.text_field :name %><br><br>
  <%= form.label :is_cold %><br>
  <%= form.check_box :is_cold %><br><br>
  <%= form.label :korok_seeds %><br>
  <%= form.number_field :korok_seeds %><br><br>
  <%= form.submit "Create Location" %>
<% end %>
