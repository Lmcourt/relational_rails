<body class="new_update">
  <div class="new_update_margin">
    <h1> <%=  "Edit A Boss #{@world_boss.name}"%></h1>

    <%= form_with url: "/world_bosses/#{@world_boss.id}", method: :patch, local: true do |form| %>
      <b><%= form.label :name %><br>
      <%= form.text_field :name, value: @world_boss.name, class: 'form_update'%><br><br>
      <%= form.label :max_health %><br>
      <%= form.number_field :max_health, class: 'form_update' %><br><br><br>
      <%= form.label :is_current_boss %><br>
      <%= form.check_box :is_current_boss, class: 'form_update' %><br><br><br> %>
      <%= form.label :zone %><br>
      <%= form.text_field :zone, class: 'form_update' %><br><br><br>
      <%= form.submit "Update Boss", class: 'button_update'%></b>
    <% end %>
</div>
</body>
