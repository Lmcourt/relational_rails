<body id="region">
  <div id="region_margin">

    <a href="/locations">All Locations</a>
    <h1 id="zelda">Legend of Zelda: <br>Breath of the Wild Regions</h1>

    <% @regions.each do |region| %>
      <h2><a href="/regions/<%= region.id %>"><%= region.name %></a></h2>
      <p><b>Created at: <%= region.created_at %></b></p>
      <b><%= button_to "Edit #{region.name}", "/regions/#{region.id}/edit", method: :get, class: 'button' %></b><br>
    <% end %><br><br>

    <%= button_to "New Region", "/regions/new", method: :get, class: 'button_new' %>
  </div>
</body>
