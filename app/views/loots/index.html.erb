<body class="loot">
  <div class="location_margin">
    <ul class='nav'>
      <li class='nav'><a class='nav' href="/">Home</a></li>
      <li class='nav'><a class='nav' href="/world_bosses">All World Bosses</a></li>
      <li class='nav'><a class='nav' href="/loots">All Loot</a></li>
    </ul>

    <h1 id='zelda'>World of Warcraft Shadowlands Loot Table</h1>

    <%= form_with url: "/loots", method: :get, local: true do |form| %>
    <%= form.text_field :search_exact %>
    <%= form.submit "Search by exact name", class: 'button' %>
    <% end %><br>

    <%= form_with url: "/loots", method: :get, local: true do |form| %>
    <%= form.text_field :search_partial %>
    <%= form.submit "Search by partial name", class: 'button' %>
    <% end %><br>

    <% @loots.each do |loot| %>
    <section id="loot-<%= loot.id %>">
      <div class='container'>
        <h3><a href="/loots/<%= loot.id %>"><%= loot.name %></a></h3>
      <ul>
        <li> Dropped by: <%= loot.world_boss.name %> </li>
        <li>Is it a memory? <%= loot.memory %> </li>
        <li> Armor: <%= loot.armor %> </li>
      </ul>
      <%= button_to "Edit", "/loots/#{loot.id}/edit", method: :get, class: 'button' %><br>
      <%= button_to "Delete", "/loots/#{loot.id}/delete", method: :delete, class: 'button'%><br><br>
      </div>
    </section>
    <% end %>
  </div>
</body>
